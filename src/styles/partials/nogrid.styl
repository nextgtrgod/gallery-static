
html.no-grid

	.gallery
		absolute()
		width calc(100% - 6em)
		height 100%
		margin auto
		display flex
		flex-wrap wrap

		&__item
			width calc(25% - 1em)
			height 20vh
			margin .5em
			@media (min-width 960px)
				height 25vh
			&:after
				display none
		
		&__link
			position absolute
			right -2em
			bottom .5em
			width 2em
			height 2em
			box-shadow none
			&[data-direction='prev']
				right 2em
			svg
				margin auto
	
	.lightbox
		z-index 1